

<%= form_for(@problem) do |f| %>
  <% if @problem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@problem.errors.count, "error") %> prohibited this problem from being saved:</h2>

      <ul>
      <% @problem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<div id="input_form" class="col-xs-10 col-sm-4 col-md-4 col-lg-4">
  <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description,:rows => 6 %>
  </div>
 
  <% if @edit %>
    <div class="field">
      <%= label :priority, "Priority" %><br>
      <%= select_tag(:priority, options_for_select(Priority.dropdown_options, :selected => Priority.selected(@priority))) %>
    </div>
  <% end %>
  <div class="actions">
  <% if @edit %>
    <%= submit_tag("Update") %>
  <% else %>
    <%= submit_tag("Create") %>
  <% end %>
  </div>

</div>
<% end %>