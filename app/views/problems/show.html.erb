
<p id="notice"><%= notice %></p>
<div id="input_form" class="col-xs-10 col-sm-4 col-md-4 col-lg-4">
  <p>
    <strong>Name:</strong>
    <%= @problem.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @problem.description %>
  </p>

 
  <p>
    <strong>Priority:</strong>
    <% if @problem.priority %>
      <%= @problem.priority.name %>
      <% else %>
      /
      <% end %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @problem.status %>
  </p>



</div>
<div class = "footer-actions">
  <%= link_to 'Edit', edit_problem_path(@problem) %> |
  <%= link_to 'Back', problems_path %>
</div>