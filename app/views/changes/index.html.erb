<h1>Changes</h1>

<div class="container">
<div class="table-responsive"> 
  <table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <% if session[:role] == "Manager" %>
        <th>Category</th>
        <th>Priority</th>
        <th>User</th>
        <th>Confirmed</th>
        <th>Comment</th>
        <th colspan="3"> Actions </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @changes.each do |change| %>
      <tr>
        <td><%= change.name %></td>
        <td><%= change.description %></td>
        <td><%= change.status %></td>
        <% if session[:role] == "Manager" %>
          <% if change.category %>
            <td><%= change.category.name %></td>
          <% else %>
            <td> - </td>
          <% end %>
          <% if change.priority %>
            <td><%= change.priority.name %></td>
          <% else %>
            <td> - </td>
          <% end %>
          <td><%= change.user.name %></td>
          <td><%= change.confirmed %></td>
          <td><%= change.comment %></td>
          <td><%= link_to 'Show', change %></td>
          <td><%= link_to 'Edit', edit_change_path(change) %></td>
          <td><%= link_to 'Solve', change %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  </tbody>
</table>
</div>
<br>
</div>
